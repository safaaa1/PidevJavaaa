<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pidev.controller.InscriptionContineController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox prefHeight="570.0" prefWidth="300.0" styleClass="background" stylesheets="@../styles/Styles.css" BorderPane.alignment="CENTER">
         <children>
            <Label text="Inscription Contine" textFill="#f8f6f6">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" top="30.0" />
               </VBox.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <HBox prefHeight="30.0" prefWidth="265.0">
               <VBox.margin>
                  <Insets bottom="40.0" left="25.0" />
               </VBox.margin>
            </HBox>
            <TextField fx:id="nomptxt" prefHeight="30.0" prefWidth="240.0" promptText="Nom">
               <VBox.margin>
                  <Insets bottom="20.0" left="25.0" right="25.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="pretxt" prefHeight="30.0" prefWidth="240.0" promptText="Prenom">
               <VBox.margin>
                  <Insets bottom="20.0" left="25.0" right="25.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="emailtxt" prefHeight="30.0" prefWidth="240.0" promptText="E-Mail">
               <VBox.margin>
                  <Insets bottom="20.0" left="25.0" right="25.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="mdptxt" prefHeight="30.0" prefWidth="240.0" promptText="Mot de passe">
               <VBox.margin>
                  <Insets bottom="20.0" left="25.0" right="25.0" />
               </VBox.margin>
            </PasswordField>
            <PasswordField fx:id="cmdptxt" prefHeight="30.0" prefWidth="240.0" promptText="Confirmer MDP">
               <VBox.margin>
                  <Insets bottom="20.0" left="25.0" right="25.0" />
               </VBox.margin>
            </PasswordField>
            <Button fx:id="save" mnemonicParsing="false" onAction="#insertInscription" prefHeight="35.0" prefWidth="130.0" styleClass="btnGreen" stylesheets="@../styles/Styles.css" text="sauvegarder" textFill="#f8f6f6">
               <VBox.margin>
                  <Insets bottom="20.0" left="80.0" right="25.0" />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="saveedit" mnemonicParsing="false" onAction="#saveedit" prefHeight="35.0" prefWidth="130.0" styleClass="btnOrange" stylesheets="@../styles/Styles.css" text="Modifier" textFill="#f2eeee">
               <VBox.margin>
                  <Insets bottom="20.0" left="80.0" right="25.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="50.0" prefWidth="640.0">
               <children>
                  <TextField fx:id="mot" prefHeight="30.0" prefWidth="230.0" promptText="Rechercher...">
                     <HBox.margin>
                        <Insets left="200.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="logout" mnemonicParsing="false" prefHeight="25.0" prefWidth="70.0" styleClass="background" stylesheets="@../styles/Styles.css" text="Logout" textFill="#e2ebea">
                     <HBox.margin>
                        <Insets left="180.0" right="5.0" top="10.0" />
                     </HBox.margin>
                     <effect>
                        <DropShadow />
                     </effect>
                  </Button>
               </children>
            </HBox>
            <TableView fx:id="table" prefHeight="300.0" prefWidth="700.0">
              <columns>
                <TableColumn fx:id="colenf" prefWidth="168.0" text="Nom" />
                <TableColumn fx:id="colpar" prefWidth="166.0" text="Prenom" />
                  <TableColumn fx:id="coltype" prefWidth="350.0" text="E-Mail" />
              </columns>
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem fx:id="supprimer" mnemonicParsing="false" onAction="#supprimer" text="Supprimer" />
                      <MenuItem fx:id="modifier" mnemonicParsing="false" onAction="#modifier" text="modifier" />
                    </items>
                  </ContextMenu>
               </contextMenu>
               <VBox.margin>
                  <Insets left="5.0" right="10.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
